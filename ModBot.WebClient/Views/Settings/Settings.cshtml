@model ModBot.Domain.DTO.SettingsDTO

@{
    ViewData["Title"] = "Settings";
}
<style>


    #HeaderText {
        background-color: #36393F;
        color: white;
        position: relative;
        top: 50px;
        text-align: center;
    }
    * {
        font-family: "Consolas";
        color:white;
    }

    input[type=text] {
        background-color: #36393F;
    }

    
    
    input[type=text], select {
        height: 50px;
        width: 130px;
        background-color: #36393F;
        padding: 12px 20px;
        border-radius: 9px;
        box-sizing: border-box;
    }

    input[type=number], select {
        height: 50px;
        width: 130px;
        background-color: #36393F;
        padding: 12px 20px;
        border-radius: 9px;
        box-sizing: border-box;
        margin: 5px;
    }
    


    #startPage {
        background-color: #2F3136;
        height: 80vh;
        width: 1000px;
        border-radius: 1em;
        padding: 1em;
        text-align: center;
        font-size: 25px;
        align-items: center;
        position: relative;
        top: 100px;
        left: 45%;
        margin-right: -45%;
        transform: translate(-40%)
    }
    #buttonSettings {
        position: relative;
        background-color: #44877f;
        border: none;
        color: white;
        border-radius: 1em;
        padding: 15px 100px;  
        display: inline-block;
        font-size: 16px;
    }
    #buttonadd {
        position: relative;
        background-color: #44877f;
        border: none;
        color: white;
        border-radius: 1em;
        height: 50px;
        width: 130px;
        left: 15%;
        display: inline-block;
        font-size: 16px;
    }
   #buttonRemove {
        position: relative;
        background-color: #44877f;
        border: none;
        color: white;
        border-radius: 1em;
        height: 50px;
        width: 130px;
        left: 15%;
        display: inline-block;
        font-size: 16px;
    }
    #row1 
    {
        float: left;
        margin-left: 20px;
    }
    #row1text
    {
        width: 200px;
        text-align: left;
    }
    #row2text {
        width: 200px;
        text-align: left;
    }
    #row2
    {
        float: right;
        margin-right: 20px;
        margin-left: 100px;
    }
    #row2item2, row2item3 {
        position: relative;
        text-align: right;
    }
    #addprofanity {
        top: 30%; 
        height: 300px;
        width: 100%;
    }
    #addText{
        height: 50px;
    }
    #addInput{
        top: 50%;
        height: 50px;
        margin-top: 30px;
    }
    #textProfanity {
        width: 300px;
        
    }

    #textStrikes {
        width: 100px; 
        
    }

    #textPunishment {
       width: 100px;
    }
    #inputProfanity {
        float: left;
        margin-left: 20px;
        width: 300px;
    }

    #inputStrikes 
    {

       
        
    }
    #inputPunishment {
      
    }
    #failure
    {
        color: red;
    }
    #success 
    {
        color: green;
    }
    #list
    {
        top: 80%;
    }

</style>


<div id="HeaderText">
    <h1>Settings</h1>
</div>

<div id="startPage">
    <div id="saveText">
        <p id="success">@ViewBag.successResponse</p>
        <p id="failure">@ViewBag.failureResponse</p>
    </div>
    <div id="content">
        <div id="row1">
            <label id="row1text" for="Mute">Mute Level</label>

            <input id="inputbox" type="text" value="@Model.TimeOutLevel" min="0" required>
            <br>
            <label id="row1text" for="Kick">Kick Level</label>

            <input id="inputbox" type="text" value="@Model.KickLevel" min="0" required>
            <br>
            <label id="row1text" for="Ban">Ban Level</label>
            <input id="inputbox" type="text" value="@Model.BanLevel" min="0" required>
        </div>
        <div id="row2">
            <div id="row2item1">
                <input id="buttonSettings" class="button" type="submit" value="Save Settings">
            </div>
            <div id="row2item2">
                <label for="Spam">Spam Mute Timer</label>
                <input type="text" id="Spam" value="@Model.SpamMuteTime" min="0" required>
            </div>
            <div id="row2item3">
                <label for="Strike">Strike Mute Timer</label>
                <input type="text" id="Strike" value="@Model.StrikeMuteTime" min="0" required>
            </div>
        </div>


        <div id="addprofanity">
            <form action="addprofanity" method="post">
                <table>
                <tr id="addText">
                    <td>
                        <label id="textProfanity">Profanity</label>
                    </td>
                    <td>
                        <label id="textStrikes">Strikes</label>
                    </td>
                    <td>
                        <label id="textPunishment">Punishment</label>
                    </td>
                </tr>
                <tr id="addInput">
                    <td>
                        <input id="inputProfanity" value="" name="profanity" required type="text" size="22">
                    </td>
                    <td>
                        <input id="inputStrikes" value="" name="strikes" required type="number" min="0" size="10">
                    </td>
                    <td>
                        <select id="inputPunishment" name="punishment" required>
                            <option value="None">None</option>
                            <option value="Mute">Mute</option>
                            <option value="Kick">Kick</option>
                            <option value="Ban">Ban</option>
                        </select>
                    </td>
                    <td>
                        <input input="add" id="buttonadd" value="Add" type="submit" size="10">
                    </td>
                </tr>
                </table>
            </form>
        </div>

        
            
                
    @for (var rotation = 0; rotation < Model.BannedWordList.Count; rotation++)
    {
        var item = Model.BannedWordList[rotation];
        <form action="removeprofanity" method="post">
            <table id="list">
                <tbody>
                    <tr>
                        <td>
                            <input id="listProfanity @rotation" name="profanity" type="text" value="@item.Profanity" required>
                        </td>
                        <td>
                            <input id="listStrikes @rotation" name="strikes" type="number" min="0" value="@item.Strikes" required>
                        </td>
                        <td>
                            <select id="listPunishment @rotation" name="punishment" required>
                                <option hidden selected value="@item.Punishment">@item.Punishment</option>
                                <option value="None">None</option>
                                <option value="Mute">Mute</option>
                                <option value="Kick">Kick</option>
                                <option value="Ban">Ban</option>
                            </select>
                        </td>
                        <th>
                            <input id="buttonRemove" value="Remove" type="submit">

                        </th>

                    </tr>
                </tbody>
            </table>
        </form>
    }
                
            

    </div>
</div>

