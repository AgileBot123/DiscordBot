@model ModBot.Domain.DTO.SettingsDTO

@{
    ViewData["Title"] = "Settings";
}
<style>


    #HeaderText {
        background-color: #36393F;
        color: white;
        position: relative;
        top: 50px;
        text-align: center;
    }
    * {
        font-family: "Consolas";
        color:white;
    }
    
    input[type=text], select {
        height: 50px;
        width: 130px;
        background-color: #36393F;
        padding: 12px 20px;
        border-radius: 9px;
        box-sizing: border-box;
    }
    

    #startPage {
        background-color: #2F3136;
        height: 800px;
        width: 1000px;
        border-radius: 1em;
        padding: 1em;
        text-align: center;
        font-size: 25px;
        align-items: center;
        position: absolute;
        top: 70%;
        left: 45%;
        margin-right: -45%;
        transform: translate(-40%, -50%)
    }
    #buttonSettings {
        position: relative;
        background-color: #44877f;
        border: none;
        color: white;
        border-radius: 1em;
        padding: 15px 100px;  
        display: inline-block;
        font-size: 16px;
    }
    #buttonadd {
        position: relative;
        background-color: #44877f;
        border: none;
        color: white;
        border-radius: 1em;
        height: 50px;
        width: 130px;
        left: 15%;
        display: inline-block;
        font-size: 16px;
    }
   #buttonRemove {
        position: relative;
        background-color: #44877f;
        border: none;
        color: white;
        border-radius: 1em;
        height: 50px;
        width: 130px;
        left: 15%;
        display: inline-block;
        font-size: 16px;
    }
    #row1 
    {
        float: left;
        margin-left: 20px;
    }
    #row1text
    {
        width: 200px;
        text-align: left;
    }
    #row2text {
        width: 200px;
        text-align: left;
    }
    #row2
    {
        float: right;
    }
    #row2item2, row2item3 {
        position: relative;
        text-align: right;
    }
    #addprofanity {
        position: absolute;
        top: 30%;
        width: 100%;
       
    }
    #textProfanity {
        position: relative;
        top: 50%;
        left: -20%;
        
    }

    #textStrikes {
        position: relative;
        top: 50%;
        left: -5%;
        
    }

    #textPunishment {
        position: relative;
        top: 50%;
        left: 10%;
       
    }
    #inputProfanity {
        position: relative;
      
        left: -20%;
    }
    #inputStrikes {
        position: relative;
       
        left: -10%;
    }
    #inputPunishment {
        position: relative;
     
        left: 10%;
    }
   
   

   

</style>


<div id="HeaderText">
    <h1>Settings</h1>
</div>

<div id="startPage">

    <div id="row1">
        <label id="row1text" for="Mute">Mute Level</label>

        <input id="inputbox" type="text" value="@Model.TimeOutLevel">
        <br>
        <label id="row1text" for="Kick">Kick Level</label>

        <input id="inputbox" type="text" value="@Model.KickLevel">
        <br>
        <label id="row1text" for="Ban">Ban Level</label>

        <input id="inputbox" type="text" value="@Model.BanLevel">
    </div>

    <div id="row2">
        <div id="row2item1">
            <button id="buttonSettings" value="Save Settings">Save Settings</button>
        </div>
        <div id="row2item2">
            <label for="Spam">Spam Mute Timer</label>
            <input type="text" id="Spam" value="@Model.SpamMuteTime">
        </div>
        <div id="row2item3">
            <label  for="Strike">Strike Mute Timer</label>
            <input type="text" id="Strike" value="@Model.StrikeMuteTime">
        </div>
    </div>

    <div id="addprofanity">
        <div>
            <label  id="textProfanity">Profanity</label>
        
            <label  id="textStrikes">Strikes</label>
        
            <label  id="textPunishment">Punishment</label>
        </div>
        <div>
        
            <form>
                <input id="inputProfanity" value="" type="text" size="22">
        
                <input id="inputStrikes" value="" type="text" size="10">
        
                <select id="inputPunishment" type="text" size="15" >
                    <option value="None">None</option>
                    <option value="Mute">Mute</option>
                    <option value="Kick">Kick</option>
                    <option value="Ban">Ban</option>
                </select>
        
                <input input="add" id="buttonadd" value="Add" type="button" size="10">
            </form>
        </div>
    </div>


    <table id="list">
        <tbody>
            @foreach (var item in Model.BannedWordList)
            {
                <tr>
                    <td>
                        <input id="listProfanity" value="@item.Profanity">
                    </td>
                    <td>
                        <input id="listStrikes" value="@item.Strikes">
                    </td>
                    <td>
                        <input id="listPunishment" value="@item.Punishment">
                    </td>
                    <th>
                        <input id="buttonRemove" value="Remove" type="button" size="15">
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>

